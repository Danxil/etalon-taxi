extends ../includes/layout

block main-content
    .header
        a.login-link.yellow-link= __('menuCabinet')
        .logo
        .header-title= __('onlineOrder')
        .contacts-panel
            .h1.text-yellow.light 808
            .h5.text-white= __('mobileCallsFree')
            .h3.text-yellow (044) 500-08-08
            .contacts-panel__hr
            .h5.text-white= __('enterPhone')
            .contacts-panel__number
                input.contacts-panel__number-placeholder(data-mask="(999) 999-99-99" placeholder="(___) ___-__-__" data-ng-model="phone")
                .contacts-panel__send-number-btn
            p.contacts-panel__order-skype= __('orderThroughSkype')
            p.h5.text-white= __('allContacts')
            .contacts-panel__additional-numbers(ng-class="{expanded: isExpanded}")
                .text-yellow.h3 (044) 500-08-08
                .text-yellow.h3 (044) 500-08-08
            .contacts-panel__expand-btn(ng-class="{collapse: isExpanded}", ng-click="isExpanded = !isExpanded")
        .auto-class-panel
            div.choose-auto(data-ng-show="chooseAutoClassAvailable")
                .auto-class-panel__choose= __('selectClassCars')
                .auto-class-panel__items
                    .auto-class-panel__item(ng-repeat="(key, value) in autoTypes" ng-class="{active: application.autoClass == value.type}", ng-click="application.autoClass = value.type")
                        img(data-ng-src="/images/auto-{{value.type}}.png")
                        .auto-class-panel__item-title {{value.label}}
            div.make-to-tel(data-ng-show="!chooseAutoClassAvailable")
                p.title= __('orderThroughTel')

    .sidebar
        button.sidebar__order-btn= __('orderTaxi')
        .sidenav
            a.white-link(href="/#{__('locale')}{{item.link}}" class="sidenav__item sidenav__item_{{item.cssClass}}" data-ng-class="{active: location == '/#{__('locale')}' + item.link || (item.link == '/' && location == '/#{__('locale')}')}" data-ng-repeat="item in menu") {{item.name['#{__('locale')}']}}
        a.sidebar__fb.white-link(href="https://www.facebook.com/pages/%D0%AD%D1%82%D0%B0%D0%BB%D0%BE%D0%BD-%D1%82%D0%B0%D0%BA%D1%81%D0%B8/1391524617843129")= __('ourFacebook')
        .flags
            a.flags__ru(href="/ru" target="_self")
            a.flags__ua(href="/ua" target="_self")
            a.flags__gb(href="/en" target="_self")
        .copyright Â© 2015 #{__('etalonTaxi')}
        .payment-ways
            img.payment-ways__item(src="/images/mc.png")
            img.payment-ways__item(src="/images/visa.png")
            .payment-ways__text= __('payWithCard')
    .main(ng-view)