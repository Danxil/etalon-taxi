  th, td
    border 1px solid borderyellow
    padding 20px 20px
    text-align center

  th
    font-size 15px

  td
    &:first-child
      text-align left

.white-link-underline
  color: #fff !important;
  text-decoration: underline !important;

.white-link-underline:hover
  color: #fff !important;
  text-decoration: none !important;

.h1
  text-transform uppercase

.svg-loader-wrapper
  text-align center
  padding 0 0 30px

