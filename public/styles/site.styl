@import vars

@font-face {
  font-family: OSSemiBold;
  src: url('../fonts/OpenSans-Semibold.ttf') format("truetype");
}
@font-face {
  font-family: OSBold;
  src: url('../fonts/OpenSans-Bold.ttf') format("truetype");
}
@font-face {
  font-family: OSLight;
  src: url('../fonts/OpenSans-Light.ttf') format("truetype");
}

*
  font-family: OSSemiBold
  outline none

a, button
  cursor: pointer !important

a
  color black !important
  text-decoration none !important

a:hover
  color black !important
  text-decoration: underline !important

html, body
  min-height: 100%
  position: relative

label
  cursor: pointer

button
  border: none

//-----HEADER-----

.header
  width: 100%
  background-color #000000
  background-image: url("../images/header_bg.png")
  background-size cover
  min-height 500px
  overflow: hidden
  background-position top

.login-link
  @extend .h4
  icon-bg('../images/icons/yellow/cabinet.png')
  margin 25px 0 0 40px

.logo
  position: absolute
  left 50%
  margin-left -157px
  width: 313px
  height: 103px
  background-image: url("../images/logo.png")
  top: 70px

.header-title
  @extend .h2
  @extend .bold
  @extend .text-center
  @extend .text-white
  margin-top: 200px
  letter-spacing 7pt

//-----SIDEBAR-----

.sidebar
  background: #000
  width: 320px
  position: absolute
  top: 300px
  left: 0
  bottom: 0
  padding-left: 40px

.sidebar__order-btn
  @extend .h3
  @extend .text-center
  background-color: hotyellow
  border-radius 3px
  width: 200px
  padding 15px

.sidenav
  margin-top: 30px

.sidenav__item
  @extend .h3
  margin-top: 15px

for itemname in 'home' 'services' 'how-to-pay' 'for-corps' 'pros' 'auto-classes' 'contacts' {
  .sidenav__item_{itemname} {
    icon-bg('../images/icons/white/' + itemname + '.png');
  }
  .sidenav__item_{itemname}:hover, .sidenav__item_{itemname}.active {
    icon-bg('../images/icons/yellow/' + itemname + '.png')
  }
}

.sidebar__fb
  @extend .h3
  margin-top: 20px
  icon-bg('../images/facebook.png')

.flags
  margin-top: 60px

for flagname in 'ru' 'ua' 'gb' {
  .flags__{flagname} {
    url = '../images/flag_' + flagname + '.png'
    margin-right: 20px
    height: 30px
    width: 43px
    background-image: url(url);
    -webkit-background-size: cover
    background-size: cover
    display: inline-block
  }
}

.copyright
  @extend .h3
  @extend .text-yellow
  margin-top: 20px


.payment-ways
  margin-top: 50px

.payment-ways__item
  margin-right: 10px
  display: inline-block

.payment-ways__text
  @extend .h5
  @extend .text-white
  margin-top: 10px
  width: 180px


//-----MAIN-----

.main
  width: 100%
  margin-left 320px
