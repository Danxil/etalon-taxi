@import vars

@font-face {
  font-family: OSSemiBold;
  src: url('../fonts/OpenSans-Semibold.ttf') format("truetype");
}
@font-face {
  font-family: OSBold;
  src: url('../fonts/OpenSans-Bold.ttf') format("truetype");
}
@font-face {
  font-family: OSLight;
  src: url('../fonts/OpenSans-Light.ttf') format("truetype");
}

*
  font-family: OSSemiBold
  outline none
  color #000000

a, button
  cursor: pointer !important

a
  color black !important
  text-decoration none !important

a:hover
  color black !important
  text-decoration: underline !important

html
  height: 100%
body
  min-height: 100%
  position: relative

label
  cursor: pointer

button
  border: none

//-----HEADER-----

.header
  width: 100%
  background-color #000000
  background-image: url("../images/header_bg.png")
  background-size cover
  min-height 500px
  overflow: hidden
  background-position top
  position: relative

.login-link
  @extend .h5
  icon-bg('../images/icons/yellow/cabinet.png')
  margin 25px 0 0 40px

.logo
  position: absolute
  left 50%
  margin-left -157px
  width: 313px
  height: 103px
  background-image: url("../images/logo.png")
  top: 70px

.header-title
  @extend .h2
  @extend .bold
  @extend .text-center
  @extend .text-white
  margin-top: 140px
  letter-spacing 7pt

.contacts-panel
  @extend .text-center
  float: right
  border 5px solid hotyellow
  margin-right: 50px
  margin-top: -230px
  padding 10px 20px
  width: 260px
  box-sizing border-box
  border-radius 3px

.contacts-panel__hr
  width: 100%
  height: 5px
  background: hotyellow;
  margin: 15px 0

.contacts-panel__number
  position: relative
  width: 100%
  overflow: hidden

.contacts-panel__number-placeholder
  @extend .h3
  @extend .text-yellow

.contacts-panel__number-input
  background: transparent
  border none

.contacts-panel__send-number-btn
  background-image: url("../images/arrow-yellow.png")
  transform rotate(90deg)
  width: 27px
  height: 15px
  position: absolute
  right 0
  top 10px
  cursor: pointer

.contacts-panel__order-skype
  @extend .text-white
  @extend .h5
  @extend .text-left
  icon-bg('../images/skype.png')

.contacts-panel__expand-btn
  background-image: url("../images/arrow-yellow.png")
  transform rotate(180deg)
  width: 27px
  height: 15px
  cursor: pointer
  margin: 10px auto 0 auto
  transition 0.5s ease-in all

.contacts-panel__additional-numbers
  margin-top: 20px
  height: 0
  transition 0.5s ease-in all
  overflow: hidden

.contacts-panel__additional-numbers.expanded
  height 65px

.contacts-panel__expand-btn.collapse
  transform rotate(0deg)

.auto-class-panel
  border-radius 3px 3px 0 0
  border 5px solid hotyellow
  position: absolute
  bottom 0
  left 320px
  padding: 10px
  width: 600px
  height: 225px
  border-bottom 0

.auto-class-panel__choose
  @extend .h4
  @extend .text-white
  icon-bg('../images/icons/white/auto-classes.png');
  margin-left: 170px

.auto-class-panel__items
  margin-left: 40px
  margin-top: 30px

.auto-class-panel__item
  @extend .text-center
  display: inline-block
  cursor: pointer
  margin-right: 20px
  margin-top: 0

.auto-class-panel__item img
  width: 150px
  opacity 0.9
  -webkit-transition: 0.2s ease-in
  -moz-transition: 0.2s ease-in
  -ms-transition: 0.2s ease-in
  -o-transition: 0.2s ease-in
  transition: 0.2s ease-in

.auto-class-panel__item.active img
  opacity: 1
  -webkit-transition: 0.2s ease-in
  -moz-transition: 0.2s ease-in
  -ms-transition: 0.2s ease-in
  -o-transition: 0.2s ease-in
  transition: 0.2s ease-in

.auto-class-panel__item-title
  @extend .h4
  color white

.auto-class-panel__item.active .auto-class-panel__item-title
  color yellow
//-----SIDEBAR-----

.sidebar
  background: #000
  width: 320px
  position: absolute
  top: 300px
  left: 0
  bottom: 0
  padding-left: 40px

.sidebar__order-btn
  @extend .h4
  @extend .text-center
  background-color: hotyellow
  border-radius 3px
  width: 200px
  padding 15px

.sidenav
  margin-top: 30px

.sidenav__item
  @extend .h4
  margin-top: 15px

for itemname in 'home' 'services' 'how-to-pay' 'for-corps' 'pros' 'auto-classes' 'contacts' {
  .sidenav__item_{itemname} {
    icon-bg('../images/icons/white/' + itemname + '.png');
  }
  .sidenav__item_{itemname}:hover, .sidenav__item_{itemname}.active {
    icon-bg('../images/icons/yellow/' + itemname + '.png')
  }
}

.sidebar__fb
  @extend .h4
  margin-top: 20px
  icon-bg('../images/facebook.png')

.flags
  margin-top: 60px

for flagname in 'ru' 'ua' 'gb' {
  .flags__{flagname} {
    url = '../images/flag_' + flagname + '.png'
    margin-right: 20px
    height: 30px
    width: 43px
    background-image: url(url);
    -webkit-background-size: cover
    background-size: cover
    display: inline-block
  }
}

.copyright
  @extend .h4
  @extend .text-yellow
  margin-top: 20px

.payment-ways
  margin-top: 50px

.payment-ways__item
  margin-right: 10px
  display: inline-block

.payment-ways__text
  @extend .h6
  @extend .text-white
  margin-top: 10px
  width: 180px


//-----MAIN-----

.main
  width: 100%
  padding-left 320px
  box-sizing padding-box

//-----MAP-----
.map
  width: 100%
  background: rosybrown
  height: 760px


//-----PROS-----
.pros
  padding 40px 50px

.pros__items
  margin: 40px 0 0 40px
  overflow: hidden

.pros__item
  @extend .h4
  @extend .text-center
  margin-right: 40px
  background-image: url("/images/icons/yellow/car-big.png")
  background-position: top center
  background-repeat: no-repeat
  padding-top: 90px
  display: inline-block
  width: 160px
  float: left

//-----THEYTRUST-----
.they-trust
  background-color: paleyellow
  padding 50px

.they-trust__imgs
  margin-top: 60px
.they-trust__img
  margin-left: 60px

//-----AWARDS-----
.awards
  padding 50px
  overflow: hidden

.awards__items
  margin-top: 50px
  margin-left: 30px

.awards__item
  @extend .h5
  @extend .text-center
  display: inline-block
  width: 200px
  float: left

.awards__item-img
  width: 115px
  margin: 0 auto
  display: block

.awards__item-title
  margin-top: 20px