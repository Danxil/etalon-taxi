    background-size cover
    background-position center

    &.auto
      background-size contain

      &.yellow
        background-color #FBFF6E

  .section-title
    margin 40px 0 25px
    font-size 20px
    font-family OSSemiBold
    text-transform uppercase
  .section-label
    font-size 15px
    font-family OSSemiBold
    margin: 10px 0 0;
    line-height 1.7
  .section-text
    font-family OSLight
    font-size 15px
    margin: 3px 0 0;


.services-table-wrapper
  padding 60px 40px

.services-table
