  float: left

//-----THEYTRUST-----
.they-trust
  background-color: paleyellow
  padding 50px

.they-trust__imgs
  margin-top 70px

.they-trust__img
  margin-left: 60px
  max-width: 180px;
  max-height: 100px;

//-----AWARDS-----
.awards
  padding 50px
  overflow: hidden

.awards__items
  margin-top: 50px
  margin-left: 30px
  overflow hidden

  &.no-padd-top
    margin-top 0

.awards__item
  @extend .h5
  @extend .text-center
  display: inline-block
  width: 33%
  float: left

.awards__item-img
  width: 180px
  margin: 0 auto
  display: block

.awards__item-title
  margin-top: 20px

.add-new-pint
  @extend .green-btn
  width 40px
  line-height 18px
  transition .5s
  opacity 1

  &:hover
    text-decoration none !important

  &[disabled]
    opacity .5

.to-point
  box-sizing:border-box;

  &.ng-move,
  &.ng-enter,
  &.ng-leave {
    transition:all linear 0.5s;
  }
  
  &.ng-leave.ng-leave-active,
  &.ng-move,
  &.ng-enter {
    opacity:0;
    max-height:0;
  }
  
  &.ng-leave,
  &.ng-move.ng-move-active,
  &.ng-enter.ng-enter-active {
    opacity:1;
    max-height:500px;
  }

