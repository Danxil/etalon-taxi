            .pros__item
                img.pros__item-img(src="/static/images/icons/white/no-smoking.png")
                = __('driversNoSmoking')
            .pros__item
                img.pros__item-img(src="/static/images/icons/white/bad-word.png")
                = __('noBadWords')
            .pros__item
                img.pros__item-img(src="/static/images/icons/white/cleaning.png")
                a.black-link-underline= __('cleaningSalon')
    .awards
        .h1.light= __('honors')
        .awards__items
            .awards__item
                img.awards__item-img(src="/static/images/reward-1.jpg")
                .awards__item-title !{__("brend2009")}
            .awards__item
                img.awards__item-img(src="/static/images/reward-2.jpg")
                .awards__item-title !{__("higherQa")}
            .awards__item
                img.awards__item-img(src="/static/images/reward-3.jpg")
                .awards__item-title !{__("higherTest")}